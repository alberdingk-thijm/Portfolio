<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:clickable="false"
    android:focusable="false"
    android:gravity="left"
    android:orientation="vertical"
    android:paddingLeft="40dp"
    tools:context=".UpdateSignsActivity" >

    <!-- EditText of the patient's current information. User should be able to type a new value in and update the text. -->

    <CheckedTextView
        android:id="@+id/checkedTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:clickable="true"
        android:text="@string/app_name"
        android:textSize="14sp"
        android:textStyle="bold"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:checked="false"
        android:onClick="toggleCheckMark" />

    <EditText
        android:id="@+id/updateInfoEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dip"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="@string/empty"
        android:singleLine="true"
        android:text="@string/empty"
        android:textSize="14sp"
        android:textStyle="normal" />

</LinearLayout>